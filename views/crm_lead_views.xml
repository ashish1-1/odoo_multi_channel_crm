<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record id="crm_lead_view_form_inherit_crm" model="ir.ui.view">
            <field name="name">model.name.view.form.inherit</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_lead_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='internal_notes']" position="before">
                    <page name="business_info" string="Business Information">
                        <group>
                            <group name="business_related_information" string="Business Related Information">
                                <field name="loading_port" />
                                <field name="monthly_quantity" />
                                <field name="current_quantity" />
                                <field name="loading_weight" />
                                <field name="taregt_price" />
                            </group>
                            <group name="product_info" string="Product Category Information">
                                <field name="channel_id" widget="selection"/>
                                <field name="lead_type_id" widget="selection"/>
                                <field name="categ_ids" widget="many2many_tags"/>
                                <field name="sub_categ_ids" widget="many2many_tags"/>
                                <field name="child_categ_ids" widget="many2many_tags"/>
                                <field name="sub_child_categ_ids" widget="many2many_tags"/>
                                <field name="form_ids" widget="many2many_tags"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
